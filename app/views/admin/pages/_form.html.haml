= form_with model: model, url: url, local: true do |f|
  .form-group
    = f.label :title, 'タイトル'
    = f.text_field :title, class: 'form-control'
  .form-group
    #editor
      = f.label :content, 'コンテンツ'
      = f.text_area :content, rows: 5, class: 'form-control', :"v-model" => 'input'
      %div.card-body{:"v-html" => 'input | marked'}
  = f.submit "送信", class: 'btn btn-primary'

:javascript
  window.onload = function() {
    new Vue({
      el: '#editor',
      data: {
        input: '',
      },
      filters: {
        marked: marked,
      },
    });
  };